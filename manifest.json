{

    "manifest_version": 2,
    "name": "Discrypt",
    "version": "1.0.8",
    "description": "Encrypt and Decrypt Discord messages.",

    "browser_specific_settings": {
        "gecko": {
            "strict_min_version": "74.0"
        }
    },
      
    "browser_action": {
        "default_popup": "popup/index.html",
        "default_title": "Discrypt",
        "default_icon": "assets/icon.svg"
    },

    "permissions": [
        "tabs", "storage", "https://cdn.discordapp.com/*"
    ],

    "background": {
        "scripts": [
            "js/discrypt_background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["https://discord.com/*"],
            "js": ["js/discrypt_index.js", "js/lib/Snowflake.js"]
        },
        {
            "matches": ["https://discord.com/*"],
            "js": ["js/lib/sjcl.min.js", "js/discrypt_localStorage.js"],
            "run_at": "document_start"
        }
    ]
}